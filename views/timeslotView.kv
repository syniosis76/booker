#:kivy 1.0

<TimeslotView>:
	GridLayout:
		cols: 1		
		Label:
			text: 'Enter the timeslots for your demos.'
			size_hint_y: 0.07
		TextInput:
			id: timeslotsInput
		GridLayout:
			cols: 2
			size_hint_y: 0.07
			Button:
				text: 'OK'
				on_press: root.okButtonClick(self)
			Button:
				text: 'Cancel'
				on_press: root.cancelButtonClick(self)