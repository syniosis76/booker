#:kivy 1.0

<BookingListView>:
	GridLayout:
		cols: 1
		GridLayout:
			cols: 7
			size_hint_y: 0.07
			Label:
				text: 'Booker'
			FloatLayout:
			FloatLayout:
			FloatLayout:
			FloatLayout:
			FloatLayout:
			Button:
				text: 'Products'
				on_press: root.productsButtonClick(self)
		ScrollView:
			GridLayout:
				cols: 1				
				row_default_height: 40
				size_hint_y: None
				height: self.minimum_height
				col_default_width: 150
				size_hint_x: None
				width: self.minimum_width
				id: bookings