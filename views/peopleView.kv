#:kivy 1.0

<PeopleView>:
	GridLayout:
		cols: 1		
		Label:
			text: 'View people details.'
			size_hint_y: 0.07
		TextInput:
			id: peopleInput
		GridLayout:
			cols: 2
			size_hint_y: 0.07
			Button:
				text: 'OK'
				on_press: root.okButtonClick(self)
			Button:
				text: 'Cancel'
				on_press: root.cancelButtonClick(self)